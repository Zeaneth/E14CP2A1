<div class="row container">
  <div class="col-4">
    <%= form_with(model: [ @company, @employee ], local: true) do |form| %>
      <%= form.hidden_field :company_id, value: @company.id %>
      <% if company.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>
    
          <ul>
          <% company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="field">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
    
      <div class="field">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
      
      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
    
      <div class="field">
        <%= form.label :area_id %>
        <%= form.select :area_id,options_for_select(Area.pluck(:name, :id)), {}, class: "form-control"%>
      </div>
    
      <div class="actions">
        <%= form.submit "Add Employee", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>